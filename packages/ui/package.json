{
  "name": "@pixelshades/ui",
  "version": "0.2.2",
  "private": false,
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "build": "bunchee --tsconfig tsconfig.build.json",
    "gen:props": "pnpm dlx @react-docgen/cli --pretty --resolver find-all-exported-components -i **/*.stories.tsx  -o ../../apps/docs/src/lib/props.json src/components/ui/**/*.tsx",
    "dev": "bunchee --watch --no-clean",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@pixelshades/styles": "workspace:*",
    "@pixelshades/utils": "workspace:*",
    "@radix-ui/react-slot": "^1.0.2",
    "lucide-react": "^0.376.0",
    "react-aria": "^3.32.1",
    "react-aria-components": "1.1.1",
    "react-stately": "^3.30.1",
    "tailwind-merge": "2.3.0",
    "tailwind-variants": "0.2.1",
    "tailwindcss": "^3.4.3",
    "tailwindcss-animate": "^1.0.7"
  },
  "peerDependencies": {
    "react": ">18.0.0",
    "react-dom": ">18.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.3.3",
    "@pixelshades/typescript-config": "workspace:*",
    "@storybook/addon-essentials": "^8.0.9",
    "@storybook/addon-interactions": "^8.0.9",
    "@storybook/addon-links": "^8.0.9",
    "@storybook/addon-onboarding": "^8.0.9",
    "@storybook/blocks": "^8.0.9",
    "@storybook/react": "^8.0.9",
    "@storybook/react-vite": "^8.0.9",
    "@storybook/test": "^8.0.9",
    "@tailwindcss/typography": "^0.5.12",
    "@turbo/gen": "^1.13.2",
    "@types/node": "^20.12.7",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "bunchee": "^5.1.2",
    "react": "^18.3.1",
    "react-docgen": "^7.0.3",
    "react-dom": "^18.3.1",
    "storybook": "^8.0.9",
    "tailwindcss-react-aria-components": "1.1.1",
    "typescript": "^5.4.5"
  },
  "files": [
    "dist"
  ],
  "exports": {
    "./tailwind": {
      "import": {
        "types": "./dist/es/tailwind.d.mts",
        "default": "./dist/es/tailwind.mjs"
      },
      "require": {
        "types": "./dist/cjs/tailwind.d.ts",
        "default": "./dist/cjs/tailwind.js"
      }
    },
    "./hooks": {
      "import": {
        "types": "./dist/es/hooks/index.d.mts",
        "default": "./dist/es/hooks/index.mjs"
      }
    },
    "./components": {
      "import": {
        "types": "./dist/es/components/index.d.mts",
        "default": "./dist/es/components/index.mjs"
      }
    },
    "./icons": {
      "import": {
        "types": "./dist/es/icons/index.d.mts",
        "default": "./dist/es/icons/index.mjs"
      }
    }
  }
}
