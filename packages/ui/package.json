{
	"name": "@pixelshades/ui",
	"version": "0.3.4",
	"private": false,
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"test": "jest",
		"lint": "eslint . --max-warnings 0",
		"generate:component": "turbo gen react-component",
		"build": "bunchee --tsconfig tsconfig.build.json",
		"gen:props": "bun run ./scripts/props-gen.ts",
		"dev": "bunchee --watch --no-clean",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"dependencies": {
		"@radix-ui/react-slot": "1.0.2",
		"lucide-react": "0.378.0",
		"react-aria": "3.33.0",
		"react-aria-components": "1.2.0",
		"react-stately": "3.31.0",
		"tailwind-merge": "2.3.0",
		"tailwind-variants": "0.2.1",
		"tailwindcss-react-aria-components": "1.1.2",
		"tailwindcss-animate": "1.0.7",
		"@pixelshades/styles": "workspace:*",
		"@pixelshades/utils": "workspace:*"
	},
	"peerDependencies": {
		"react": ">18.0.0",
		"react-dom": ">18.0.0",
		"tailwindcss": ">3.0.0"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^1.3.3",
		"@pixelshades/typescript-config": "workspace:*",
		"@storybook/addon-essentials": "^8.0.10",
		"@storybook/addon-interactions": "^8.0.10",
		"@storybook/addon-links": "^8.0.10",
		"@storybook/addon-onboarding": "^8.0.10",
		"@storybook/addon-themes": "^8.0.10",
		"@storybook/blocks": "^8.0.10",
		"@storybook/react": "^8.0.10",
		"@storybook/react-vite": "^8.0.10",
		"@storybook/test": "^8.0.10",
		"@tailwindcss/typography": "^0.5.13",
		"@testing-library/react": "^15.0.7",
		"@turbo/gen": "^1.13.3",
		"@types/bun": "^1.1.1",
		"@types/node": "^20.12.8",
		"@types/jest": "^29.5.12",
		"@types/react": "^18.3.1",
		"@types/react-dom": "^18.3.0",
		"bunchee": "5.1.5",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"react": "^18.3.1",
		"react-docgen": "^7.0.3",
		"storybook": "^8.0.9",
		"react-docgen-typescript": "^2.2.2",
		"react-dom": "^18.3.1",
		"tailwindcss": "3.4.3",
		"ts-jest": "^29.1.2",
		"typescript": "^5.4.5"
	},
	"files": ["dist"],
	"exports": {
		"./tailwind": {
			"import": {
				"types": "./dist/es/tailwind.d.mts",
				"default": "./dist/es/tailwind.mjs"
			},
			"require": {
				"types": "./dist/cjs/tailwind.d.ts",
				"default": "./dist/cjs/tailwind.js"
			}
		},
		"./hooks": {
			"import": {
				"types": "./dist/es/hooks/index.d.mts",
				"default": "./dist/es/hooks/index.mjs"
			}
		},
		"./components": {
			"import": {
				"types": "./dist/es/components/index.d.mts",
				"default": "./dist/es/components/index.mjs"
			}
		},
		"./icons": {
			"import": {
				"types": "./dist/es/icons/index.d.mts",
				"default": "./dist/es/icons/index.mjs"
			}
		}
	}
}
