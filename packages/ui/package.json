{
	"name": "@pixelshades/ui",
	"version": "0.7.2",
	"private": false,
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"generate:component": "turbo gen react-component",
		"build": "bunchee --tsconfig tsconfig.build.json",
		"gen:props": "bun run ./scripts/props-gen.ts",
		"dev": "bunchee --watch",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@internationalized/date": "^3.5.5",
		"@pixelshades/cn": "workspace:*",
		"@pixelshades/styles": "workspace:*",
		"@pixelshades/utils": "workspace:*",
		"@radix-ui/react-slot": "1.1.0",
		"@react-aria/utils": "^3.25.2",
		"@react-stately/utils": "^3.10.4",
		"@tabler/icons-react": "^3.15.0",
		"react-aria": "3.34.3",
		"react-aria-components": "1.3.3",
		"react-stately": "3.32.2",
		"tailwindcss-animate": "1.0.7",
		"tailwindcss-react-aria-components": "1.1.5"
	},
	"peerDependencies": {
		"react": ">18.0.0",
		"react-dom": ">18.0.0",
		"tailwindcss": ">3.0.0"
	},
	"devDependencies": {
		"@tailwindcss/typography": "^0.5.15",
		"@total-typescript/tsconfig": "^1.0.4",
		"@turbo/gen": "^2.1.1",
		"@types/bun": "^1.1.8",
		"@types/node": "^22.7.4",
		"@types/react": "^18.3.10",
		"@types/react-dom": "^18.3.0",
		"bunchee": "5.5.0",
		"react": "^18.3.1",
		"react-docgen": "^7.0.3",
		"react-docgen-typescript": "^2.2.2",
		"react-dom": "^18.3.1",
		"tailwind-variants": "0.2.1",
		"tailwindcss": "3.4.13",
		"typescript": "^5.6.2"
	},
	"files": [
		"dist",
		"src/index.css"
	],
	"exports": {
		".": {
			"import": {
				"types": "./dist/es/index.d.mts",
				"default": "./dist/es/index.mjs"
			},
			"require": {
				"types": "./dist/cjs/index.d.ts",
				"default": "./dist/cjs/index.js"
			}
		},
		"./tailwind": {
			"import": {
				"types": "./dist/es/tailwind.d.mts",
				"default": "./dist/es/tailwind.mjs"
			},
			"require": {
				"types": "./dist/cjs/tailwind.d.ts",
				"default": "./dist/cjs/tailwind.js"
			}
		},
		"./hooks": {
			"import": {
				"types": "./dist/es/hooks/index.d.mts",
				"default": "./dist/es/hooks/index.mjs"
			}
		},
		"./components": {
			"import": {
				"types": "./dist/es/components/index.d.mts",
				"default": "./dist/es/components/index.mjs"
			}
		},
		"./icons": {
			"import": {
				"types": "./dist/es/icons/index.d.mts",
				"default": "./dist/es/icons/index.mjs"
			}
		}
	}
}
