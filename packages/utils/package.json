{
	"name": "@pixelshades/utils",
	"version": "0.1.8",
	"private": false,
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "bunchee",
		"dev": "bunchee --watch --no-clean"
	},
	"dependencies": {
		"@pixelshades/cn": "workspace:*",
		"@radix-ui/react-slot": "1.1.0"
	},
	"peerDependencies": {
		"react": ">18.0.0",
		"react-dom": ">18.0.0"
	},
	"devDependencies": {
		"@total-typescript/tsconfig": "^1.0.4",
		"@types/node": "^22.5.4",
		"@types/react": "^18.3.5",
		"@types/react-dom": "^18.3.0",
		"bunchee": "5.4.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"tailwind-variants": "0.2.1",
		"typescript": "^5.6.2"
	},
	"files": [
		"dist"
	],
	"exports": {
		"./jsx": {
			"import": {
				"types": "./dist/es/jsx/index.d.mts",
