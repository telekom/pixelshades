			}
		},
		"./styles": {
			"import": {
				"types": "./dist/es/styles/index.d.mts",
				"default": "./dist/es/styles/index.mjs"
			}
		},
		"./types": {
			"import": {
				"types": "./dist/es/types/index.d.mts",
				"default": "./dist/es/types/index.mjs"
			}
