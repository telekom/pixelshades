{
  "name": "pixelshades-mono",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "bump-versions": "bun changeset version && bun install",
    "commit": "cz"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.0",
    "@changesets/cli": "^2.27.1",
    "@pixelshades/typescript-config": "workspace:*",
    "concurrently": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "turbo": "1.13.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.0.28",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}