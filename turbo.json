{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [
		"**/.env.*local"
	],
	"pipeline": {
		"build": {
			"dependsOn": [
				"^build"
			],
			"outputs": [
				".next/**",
				"!.next/cache/**",
				"dist/**"
			]
		},
		"@pixelshades/styles#build": {
			"cache": true,
			"persistent": false
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"@pixelshades/ui#dev": {
			"cache": false,
			"persistent": true
		}
	}
}